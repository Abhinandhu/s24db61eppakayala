extends layout

block content
    h1= title

    if (toShow == null)
        h2 No instance to update
    else
        - let animalid = toShow._id
        - let animal_name = toShow.name
        - let animal_type = toShow.type
        - let animal_age = toShow.age
        div.row(class='mb-2')
            div.mr-1 ID is
                div #{animalid}
                - let actionid = "/resource/animal/" + animalid
                form(id='animalForm', action= actionid, method="POST")
                    div.form-group
                        label.animalAttr(for='animal_name') animal Name
                        input#animal_name(type='text' name='animal_name', value= animal_name)
                    div.form-group
                        label.animalAttr(for='animal_type') animal Type
                        input#animal_type(type='text' name='animal_type', value= animal_type)
                    div.form-group
                        label.animalAttr(for='animal_age') animal Age
                        input#animal_age(type='number' name='animal_age', value= animal_age)
                    input(type="submit")
    script.
        document.forms['animalForm'].addEventListener('submit', (event) => {
            event.preventDefault();
            // TODO do something here to show user that form is being submitted
            fetch(event.target.action, {
                method: 'PUT',
                body: new URLSearchParams(new FormData(event.target)) // event.target is the form
            }).then((resp) => {
                return resp.text(); // or resp.text() or whatever the server sends
            }).then((body) => {
                alert("Update succeeded")
                // TODO handle body
            }).catch((error) => {
                // TODO handle error
                alert("Update failed " + error )
            });
        });