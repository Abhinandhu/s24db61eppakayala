extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
      - let animalid = toShow._id
      - let animal_name = toShow.name
      - let animal_type = toShow.type
      - let animal_age = toShow.age
      - let actionid = "/resource/animal/" + animalid
      script let actionid = "#{actionid}"
      div
        div.row
          div(class='animalAttr mr-3') animal ID is:
          div #{animalid}
        div.row
          div(class='animalAttr mr-3') animal Type is:
          div #{animal_name}
        div.row
          div(class='animalAttr mr-3') animal Size is:
          div #{animal_age}
        div.row
          div(class='animalAttr mr-3') animal Cost is:
          div #{animal_type}
        button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
        button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
    script.
      function cancel() {
        // Go back to the home page for the animal collection
        window.location.href='/animals'
      }
    script.
      function deleteOnid() {
        console.log("starting delete")
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.text(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeded")
          window.location.href='/animals'
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error )
        });
      }
