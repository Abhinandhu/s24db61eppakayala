extends layout

block content
  h1= title
  form(id='animalForm', action="/resource/animal", method="POST")
    div.form-group
      label.animalAttr(for='name') animal Name
      input#animal_type(type='text', name='animal_type')
    div.form-group
      label.animalAttr(for='type') animal Type
      input#size(type='text', name='animal_size')
    div.form-group
      label.animalAttr(for='age') animal Age
      input#cost(type='number', name='animal_price')
    input(type="submit")

  script.
    document.forms['animalForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeeded");
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Save failed " + error );
      });
    });